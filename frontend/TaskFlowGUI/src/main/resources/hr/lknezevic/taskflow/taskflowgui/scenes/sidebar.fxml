<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="sidebar" alignment="TOP_CENTER" prefHeight="768.0" prefWidth="200.0" stylesheets="" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hr.lknezevic.taskflow.taskflowgui.controllers.SidebarController">
    <!-- User Info Section -->
    <VBox alignment="CENTER" spacing="10.0" style="-fx-background-color: #3498db; -fx-padding: 20px;">
        <ImageView fx:id="userImage" fitHeight="86.0" fitWidth="90.0" pickOnBounds="true" preserveRatio="true">
        </ImageView>
        <Label fx:id="fullName" style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;" text="John Doe" />
        <Label fx:id="email" style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;" text="Email" />
        <Label fx:id="userName11" style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;" text="Department" />
    </VBox>

       <!-- Navigation Buttons -->
    <VBox fx:id="navigation" alignment="CENTER" prefHeight="478.0" prefWidth="220.0" spacing="10.0" style="-fx-padding: 20px;">
        <Button mnemonicParsing="false" styleClass="button" text="Dashboard" />
        <Button mnemonicParsing="false" styleClass="button" text="Tasks" />
        <Button mnemonicParsing="false" styleClass="button" text="Projects" />
        <Button mnemonicParsing="false" styleClass="button" text="Administrative" />
        <Button mnemonicParsing="false" styleClass="button" text="Notifications" />
        <Button mnemonicParsing="false" styleClass="button" text="Requests" />
      <opaqueInsets>
         <Insets />
      </opaqueInsets>
    </VBox>

    <!-- Preferences and Logout Section -->
    <VBox alignment="CENTER" prefWidth="220.0" spacing="10.0" style="-fx-padding: 20px;">
        <Button mnemonicParsing="false" styleClass="button" text="Preferences" />
        <Button mnemonicParsing="false" styleClass="button" text="Logout" />
      <opaqueInsets>
         <Insets />
      </opaqueInsets>
    </VBox>
</VBox>
